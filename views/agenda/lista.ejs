<script>
function getStatusColor(status) {
    const colors = {
        'agendado': 'border-info',
        'confirmado': 'border-success',
        'cancelado': 'border-danger',
        'realizado': 'border-primary',
        'pendente': 'border-warning'
    };
    return colors[status] || 'border-secondary';
}

function getBadgeColor(status) {
    const colors = {
        'agendado': 'bg-info',
        'confirmado': 'bg-success',
        'cancelado': 'bg-danger',
        'realizado': 'bg-primary',
        'pendente': 'bg-warning'
    };
    return colors[status] || 'bg-secondary';
}

function getStatusText(status) {
    const texts = {
        'agendado': 'Agendado',
        'confirmado': 'Confirmado',
        'cancelado': 'Cancelado',
        'realizado': 'Realizado',
        'pendente': 'Pendente'
    };
    return texts[status] || status;
}

function getTipoIcon(tipo) {
    const icons = {
        'avaliacao': '<i class="bi bi-clipboard-pulse"></i>',
        'fisioterapia': '<i class="bi bi-heart-pulse"></i>',
        'osteopatia': '<i class="bi bi-bone"></i>',
        'pilates': '<i class="bi bi-activity"></i>',
        'reavaliacao': '<i class="bi bi-arrow-repeat"></i>',
        'alta': '<i class="bi bi-check-circle"></i>'
    };
    return icons[tipo] || '<i class="bi bi-clipboard"></i>';
}

function getTipoText(tipo) {
    const texts = {
        'avaliacao': 'Avaliação',
        'fisioterapia': 'Fisioterapia',
        'osteopatia': 'Osteopatia',
        'pilates': 'Pilates',
        'reavaliacao': 'Reavaliação',
        'alta': 'Alta'
    };
    return texts[tipo] || tipo;
}

// Filtros
function filtrarAgendamentos() {
    const status = document.getElementById('filtroStatus').value;
    const profissional = document.getElementById('filtroProfissional').value;
    const periodo = document.getElementById('filtroPeriodo').value;
    const busca = document.getElementById('buscaAgendamento').value.toLowerCase();
    const linhas = document.querySelectorAll('#tabelaAgendamentos tbody tr');
    
    linhas.forEach(linha => {
        const statusLinha = linha.cells[4].textContent.toLowerCase();
        const profissionalLinha = linha.cells[1].textContent.toLowerCase();
        const pacienteLinha = linha.cells[0].textContent.toLowerCase();
        
        const correspondeStatus = !status || statusLinha.includes(status);
        const correspondeProfissional = !profissional || profissionalLinha.includes(profissional);
        const correspondeBusca = !busca || pacienteLinha.includes(busca);
        
        // Verificar período
        let correspondePeriodo = true;
        if (periodo === 'hoje') {
            const dataAgendamento = new Date(linha.cells[0].getAttribute('data'));
            const hoje = new Date();
            correspondePeriodo = dataAgendamento.toDateString() === hoje.toDateString();
        } else if (periodo === 'semana') {
            const dataAgendamento = new Date(linha.cells[0].getAttribute('data'));
            const semana = new Date();
            const diffDias = Math.floor((semana - dataAgendamento) / (1000 * 60 * 60 * 24));
            correspondePeriodo = diffDias <= 7;
        } else if (periodo === 'mes') {
            const dataAgendamento = new Date(linha.cells[0].getAttribute('data'));
            const mes = new Date();
            correspondePeriodo = dataAgendamento.getMonth() === mes.getMonth() && dataAgendamento.getFullYear() === mes.getFullYear();
        }
        
        linha.style.display = (correspondeStatus && correspondeProfissional && correspondeBusca && correspondePeriodo) ? '' : 'none';
    });
}

function editarAgendamento(id) {
    window.location.href = '/agendamentos/' + id + '/editar';
}

function confirmarPresenca(id) {
    const modal = new bootstrap.Modal(document.getElementById('modalConfirmacao'));
    document.getElementById('confirmacaoTitulo').textContent = 'Confirmar Presença';
    document.getElementById('confirmacaoMensagem').textContent = 'Deseja confirmar a presença do paciente neste agendamento?';
    
    document.getElementById('confirmacaoBotao').onclick = function() {
        fetch('/agenda/' + id + '/status', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ status: 'confirmado' })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erro ao confirmar presença: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Erro:', error);
            alert('Erro ao confirmar presença');
        });
        
        modal.hide();
    };
    
    modal.show();
}

function remarcarAgendamento(id) {
    window.location.href = '/agendamentos/' + id + '/remarcar';
}

function cancelarAgendamento(id) {
    const modal = new bootstrap.Modal(document.getElementById('modalConfirmacao'));
    document.getElementById('confirmacaoTitulo').textContent = 'Cancelar Agendamento';
    document.getElementById('confirmacaoMensagem').textContent = 'Deseja cancelar este agendamento? Esta ação não poderá ser desfeita.';
    
    document.getElementById('confirmacaoBotao').onclick = function() {
        fetch('/agenda/' + id + '/cancelar', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ motivo: 'Cancelado pelo usuário' })
        })
        .then(response => response.json())
        .then(data => {
            if (data.success) {
                location.reload();
            } else {
                alert('Erro ao cancelar agendamento: ' + data.message);
            }
        })
        .catch(error => {
            console.error('Erro:', error);
            alert('Erro ao cancelar agendamento');
        });
        
        modal.hide();
    };
    
    modal.show();
}

// Event listeners
document.addEventListener('DOMContentLoaded', function() {
    // Adicionar listeners aos filtros
    const filtros = ['filtroStatus', 'filtroProfissional', 'filtroPeriodo', 'buscaAgendamento'];
    filtros.forEach(filtro => {
        if (filtro) {
            filtro.addEventListener('input', filtrarAgendamentos);
            filtro.addEventListener('change', filtrarAgendamentos);
        }
    });
});
</script>
