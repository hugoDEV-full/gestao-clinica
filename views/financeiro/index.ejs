<div class="d-flex justify-content-between align-items-center mb-4">
    <h3><i class="bi bi-currency-dollar"></i> Financeiro</h3>
    <div class="btn-group">
        <% if (typeof canLancar !== 'undefined' ? canLancar : true) { %>
            <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#modalLancamento">
                <i class="bi bi-plus-circle"></i> Novo Lançamento
            </button>
        <% } %>
    </div>
</div>

<!-- Cards de Resumo -->
<% if (resumo) { %>
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-success bg-gradient text-white">
                    <i class="bi bi-arrow-up-circle"></i>
                </div>
                <h4 class="mb-1">R$ <%= resumo && resumo.receitasMes != null ? Number(resumo.receitasMes).toFixed(2).replace('.', ',') : '0,00' %></h4>
                <p class="text-muted mb-0">Receitas Mês</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-danger bg-gradient text-white">
                    <i class="bi bi-arrow-down-circle"></i>
                </div>
                <h4 class="mb-1">R$ <%= resumo && resumo.despesasMes != null ? Number(resumo.despesasMes).toFixed(2).replace('.', ',') : '0,00' %></h4>
                <p class="text-muted mb-0">Despesas Mês</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-primary bg-gradient text-white">
                    <i class="bi bi-cash-stack"></i>
                </div>
                <h4 class="mb-1">R$ <%= resumo && resumo.saldoMes != null ? Number(resumo.saldoMes).toFixed(2).replace('.', ',') : '0,00' %></h4>
                <p class="text-muted mb-0">Saldo Mês</p>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-icon bg-info bg-gradient text-white">
                    <i class="bi bi-clock-history"></i>
                </div>
                <h4 class="mb-1">R$ <%= resumo && resumo.saldoAcumulado != null ? Number(resumo.saldoAcumulado).toFixed(2).replace('.', ',') : '0,00' %></h4>
                <p class="text-muted mb-0">Saldo Acumulado</p>
            </div>
        </div>
    </div>
<% } %>

<!-- Tabela de Lançamentos -->
<% if (resumo) { %>
    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-ul"></i> Lançamentos Financeiros
            </h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Data</th>
                            <th>Descrição</th>
                            <th>Paciente</th>
                            <th>Tipo</th>
                            <th>Valor</th>
                            <th>Status</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (lancamentos && lancamentos.length > 0) { %>
                            <% lancamentos.forEach(l => { %>
                                <tr>
                                    <td><%= l.data_cadastro ? new Date(l.data_cadastro).toLocaleDateString('pt-BR') : '-' %></td>
                                    <td><%= l.descricao || '-' %></td>
                                    <td><%= l.paciente_nome || '-' %></td>
                                    <td>
                                        <% if (String(l.tipo).toLowerCase() === 'receita') { %>
                                            <span class="badge bg-success">Receita</span>
                                        <% } else { %>
                                            <span class="badge bg-danger">Despesa</span>
                                        <% } %>
                                    </td>
                                    <td class="<%= String(l.tipo).toLowerCase() === 'receita' ? 'text-success' : 'text-danger' %> fw-bold">
                                        R$ <%= l.valor != null ? Number(l.valor).toFixed(2).replace('.', ',') : '0,00' %>
                                    </td>
                                    <td>
                                        <% if (String(l.status || '').toLowerCase() === 'pago') { %>
                                            <span class="badge bg-success">Pago</span>
                                        <% } else { %>
                                            <span class="badge bg-warning">Pendente</span>
                                        <% } %>
                                    </td>
                                    <td>
                                        -
                                    </td>
                                </tr>
                            <% }); %>
                        <% } else { %>
                            <tr>
                                <td colspan="7" class="text-center text-muted">Nenhum lançamento encontrado.</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
<% } %>

<!-- Modal de Lançamento -->
<% if (typeof canLancar !== 'undefined' ? canLancar : true) { %>
    <div class="modal fade" id="modalLancamento" tabindex="-1">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Novo Lançamento Financeiro</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <form method="POST" action="/financeiro/lancamentos">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label class="form-label">Tipo</label>
                                <select class="form-select" name="tipo" required>
                                    <option value="">Selecione...</option>
                                    <option value="receita">Receita</option>
                                    <option value="despesa">Despesa</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Valor</label>
                                <div class="input-group">
                                    <span class="input-group-text">R$</span>
                                    <input type="number" class="form-control" step="0.01" name="valor" required>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Data</label>
                                <input type="date" class="form-control" name="data_cadastro" required>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Paciente</label>
                                <select class="form-select" name="paciente_id">
                                    <option value="">Selecione...</option>
                                    <% if (pacientes && pacientes.length) { %>
                                        <% pacientes.forEach(p => { %>
                                            <option value="<%= p.id %>"><%= p.nome %><%= p.cpf ? ' - ' + p.cpf : '' %></option>
                                        <% }) %>
                                    <% } %>
                                </select>
                            </div>
                            <div class="col-12">
                                <label class="form-label">Descrição</label>
                                <textarea class="form-control" rows="3" name="descricao" placeholder="Descrição do lançamento..." required></textarea>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Categoria</label>
                                <select class="form-select" name="categoria">
                                    <option value="">Selecione...</option>
                                    <option value="consulta">Consulta</option>
                                    <option value="mensalidade">Mensalidade</option>
                                    <option value="aluguel">Aluguel</option>
                                    <option value="material">Material</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Forma Pagamento</label>
                                <select class="form-select" name="forma_pagamento">
                                    <option value="">Selecione...</option>
                                    <option value="dinheiro">Dinheiro</option>
                                    <option value="cartao">Cartão</option>
                                    <option value="pix">PIX</option>
                                    <option value="boleto">Boleto</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">Status</label>
                                <select class="form-select" name="status">
                                    <option value="pendente">Pendente</option>
                                    <option value="pago">Pago</option>
                                </select>
                            </div>
                        </div>
                        <div class="d-none">
                            <button type="submit" id="btnSubmitLancamento"></button>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" onclick="document.getElementById('btnSubmitLancamento').click()">Salvar Lançamento</button>
                </div>
            </div>
        </div>
    </div>
<% } %>
